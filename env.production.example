# Production Environment Configuration for AWS Lightsail
# Copy this file to .env and update the values for your deployment

# Domain Configuration
DOMAIN_NAME=sync.ankipi.com
EMAIL=admin@ankipi.com

# Anki Sync Server Configuration
ANKI_SYNC_SERVER_HOST=anki-sync-server
ANKI_SYNC_SERVER_PORT=27702

# Certificate Configuration
HTTPS_CERT_PATH=/app/certs

# Data Storage
ANKISYNCD_DATA_ROOT=/app/collections
ANKISYNCD_AUTH_DB_PATH=/app/collections/auth.db

# Timezone
TZ=UTC

# Optional: Enable debug logging
# PYTHONUNBUFFERED=1
# DEBUG=1 